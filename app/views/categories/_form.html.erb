<h1 class="text-white">Categories</h1>
<%= form_for @category do |f|%>
  <div class="field">
    <%= f.label :name ,class: "col-sm-2 col-form-label font-weight-bold text-white"%>
    <%= f.text_field :name, required: true, class: "form-control", placeholder: "Category Name" %>
  </div>

  <div class="field">
    <%= f.label :icon ,class: "col-sm-2 col-form-label font-weight-bold"%>
    <%= f.text_field :icon , class: "form-control", placeholder: "Category Icon"%>
  </div>

  <br>

  <div>
    <%= f.submit "Add new category", class: "btn btn-outline-primary" %>
  </div> 
<%end%>